<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/card1"
    android:layout_margin="@dimen/margin_3"
    android:background="@drawable/shape_bg_white_n5"
    >
<!--     android:background="@drawable/shape_button_blue_light"  -->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/relativeH2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button_blue_light"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/relativeH1"
            android:background="@drawable/shape_button_blue10"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cv_thumbnail_vehicle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="@dimen/margin_13"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_5"
                android:src="@drawable/ic_car_white"
                />

            <RelativeLayout
                android:id="@+id/btnUpDown"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/ivUpDown"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_arrow_left_white"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_name_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/btnUpDown"
                android:layout_toRightOf="@+id/cv_thumbnail_vehicle"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/margin_10"
                android:gravity="left"
                style="@style/TextAppearance.TextNormal_White"
                android:textSize="@dimen/txt_size_h7"
                android:text="@string/name_vehicle"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
        </RelativeLayout>

        <!-- ExpandableLinearLayout -->
        <com.github.aakira.expandablelayout.ExpandableLinearLayout
            android:id="@+id/expandableLayout_vehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeH1"
            android:orientation="vertical"
            app:ael_duration="400"
            app:ael_expanded="false"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_15"
                android:padding="@dimen/margin_15"
                android:orientation="horizontal"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/btn_call"
                    android:layout_width="wrap_content"
                    android:minWidth="90dp"
                    android:layout_height="wrap_content"
                    style="@style/TextButton10Small"
                    android:textStyle="bold"
                    android:text="@string/call"

                    />

                <TextView
                    android:id="@+id/btn_edit"
                    android:layout_width="wrap_content"
                    android:minWidth="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_25"
                    style="@style/TextButton10Small"
                    android:textStyle="bold"
                    android:text="@string/edit"
                    />

            </LinearLayout>

        </com.github.aakira.expandablelayout.ExpandableLinearLayout>
    </RelativeLayout>


   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:padding="@dimen/margin_15"
           android:layout_marginStart="@dimen/margin_5"
           >

           <TextView
               android:id="@+id/tv_subUserId"
               android:visibility="gone"
               style="@style/TextAppearance.TextNormal_Black"
               android:textSize="@dimen/txt_body2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:lines="1"
               android:text="tv_subUserId"
               />

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               >

               <TextView
                   android:visibility="gone"
                   style="@style/TextAppearance.TextNormal_Black"
                   android:textSize="@dimen/txt_body2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:minWidth="95dp"
                   android:text="@string/name"
                   />
               <TextView
                   android:id="@+id/tv_name"
                   style="@style/TextAppearance.TextNormal_Black"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="@dimen/margin_1"
                   android:lines="1"
                   android:text="@string/username"
                   android:textSize="@dimen/txt_body2"
                   />
           </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="@dimen/margin_5"
               >
               <TextView
                   android:visibility="gone"
                   style="@style/TextAppearance.TextNormal_White"
                   android:textSize="@dimen/txt_body2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:lines="1"
                   android:text="@string/mobileno"
                   />
               <TextView
                   android:id="@+id/tv_mobileno"
                   style="@style/TextAppearance.TextNormal_Black"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="@dimen/margin_1"
                   android:lines="1"
                   android:text="@string/mobileno"
                   android:textSize="@dimen/txt_body2"
                   />

           </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="@dimen/margin_5"
               >
               <TextView
                   android:visibility="gone"
                   style="@style/TextAppearance.TextNormal_White"
                   android:textSize="@dimen/txt_body2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:minWidth="95dp"
                   android:lines="1"
                   android:text="@string/email"
                   />
               <TextView
                   android:id="@+id/tv_email"
                   style="@style/TextAppearance.TextNormal_Black"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="@dimen/margin_1"
                   android:lines="1"
                   android:text="@string/email"
                   android:textSize="@dimen/txt_body2"
                   />

           </LinearLayout>


       </LinearLayout>

       <CheckBox
           android:id="@+id/checkbox"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toLeftOf="@+id/btn_user_delete"
           android:layout_centerVertical="true"
           android:layout_marginEnd="@dimen/margin_5"
           />
       <TextView
           android:id="@+id/btn_user_delete"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:layout_centerVertical="true"
           android:text="@string/delete_sub_user"
           style="@style/TextButton"
           android:background="@color/colorPrimary2"
           android:layout_marginEnd="@dimen/margin_10"
       />

       />
   </RelativeLayout>

</LinearLayout>



