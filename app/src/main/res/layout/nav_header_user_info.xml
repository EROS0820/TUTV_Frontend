<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_header_profile_user"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:orientation="vertical"
    android:background="@color/colorPrimary2"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_25"
        android:background="@color/transparent"
        />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_headTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_20"
        android:text="@string/app_name1"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/txt_size_h5"
        style="@style/TextAppearance.TextNormal_White"
        />


    <LinearLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary2"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- CircleImageView -->
            <LinearLayout
                android:id="@+id/ll_header_profile_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|center"
                android:layout_weight="0.6">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile_pic_head"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/profile_default"
                   />

            </LinearLayout>

<!--            tv_user_name-->
            <LinearLayout
                android:layout_marginStart="@dimen/margin_5"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight="1.4">

                <TextView
                    android:id="@+id/tv_user_name_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/username"
                    android:textColor="@color/colorBlue1"
                    android:textSize="@dimen/txt_body2"
                    style="@style/TextAppearance.TextNormal_White"
                    />

<!--                android:textAppearance="@style/TextAppearance.AppCompat.Body1"-->
                <TextView
                    android:id="@+id/tv_mobile_number_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mobileno"
                    android:textColor="@color/colorBlue1"
                    android:textSize="@dimen/txt_caption"
                    style="@style/TextAppearance.TextNormal_White"
                    />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="@dimen/margin_3"
                   android:layout_marginEnd="@dimen/margin_15"
                   >

                   <LinearLayout
                       android:id="@+id/ll_header_profile"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_weight="1"
                       android:paddingTop="@dimen/margin_5"
                       >
                       <ImageView
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:background="@drawable/ic_user"
                           />
                       <TextView
                           android:id="@+id/tv_profile"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginStart="@dimen/margin_5"
                           android:layout_gravity="center_vertical"
                           android:text="@string/profile"
                           android:textColor="@color/colorBlue1"
                           android:gravity="center_vertical"
                           android:textSize="@dimen/txt_caption"
                           style="@style/TextAppearance.TextNormal_White"
                           />

                   </LinearLayout>

                   <LinearLayout
                       android:id="@+id/ll_header_settings"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_weight="1"
                       android:padding="@dimen/margin_5"
                       >
                       <ImageView
                           android:layout_width="18dp"
                           android:layout_height="18dp"
                           android:background="@drawable/ic_setting"
                           android:backgroundTint="@color/white"
                           />
                       <TextView
                           android:id="@+id/tv_settings"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginStart="@dimen/margin_5"
                           android:layout_gravity="center_vertical"
                           android:text="@string/settings"
                           android:textColor="@color/colorBlue1"
                           android:gravity="center_horizontal"
                           android:textSize="@dimen/txt_caption"
                           style="@style/TextAppearance.TextNormal_White"
                           />
                   </LinearLayout>

               </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin_12"
        android:layout_marginBottom="@dimen/margin_5"
        />

</LinearLayout>